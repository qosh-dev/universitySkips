
@{
    Speciality[] list = Model.list;
}

<div style=" margin: auto 25%; width:max-content; height:max-content; padding: 15px;border: 1.5px solid black; border-radius: 15px"   >
    <h5 style="float: right; margin-right:15px">Форма добавления специальности</h5>
    <form style=" " action="/Home/addSpec" method="post">
        <input type="text" name="name"/>
        <input type="hidden" name="Id" value="@Model.Id">
        <input type="submit" value="Сохранить">
    </form>
    <h5 style="float: right; margin-right:15px">Список доступных специальностей</h5><br/>
    <table>
        @for (int i = 0; i < list.Count(); i++)
        {
            int index = i+1;
            string href = "/Home/removeSpec?dep=" + Model.Id + "&Id=" + list[i].Id;
            <tr>
                <td>@index. @list[i].Name</td>    
                <td><a href="@href">Удалить</a></td>
            </tr>
        }
    </table>
</div>
